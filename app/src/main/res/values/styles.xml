<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Overlay.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorControlNormal">?android:textColorPrimary</item>
    </style>

    <style name="Widget.Appbar" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="android:background">@color/background</item>
    </style>

    <style name="Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">?android:textColorPrimaryInverse</item>
        <item name="android:background">?colorOnPrimary</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:theme">@style/Overlay.Toolbar</item>
    </style>

    <style name="Widget.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/background</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicator">@drawable/rounded_tab_indicator</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabTextAppearance">@style/Appearance.Tab.Title</item>
    </style>

    <style name="Widget.Card.Elevated" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="Widget.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">?colorSurface</item>
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="Widget.Snackbar.Text" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Widget.Snackbar.Button" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
</resources>