<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Appearance.Toolbar.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:longClickable">false</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Appearance.Tab.Title" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/product_sans_medium</item>
    </style>

    <style name="Appearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="fontFamily">@font/product_sans_medium</item>
    </style>

    <style name="Appearance.Body" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Appearance.Body.Darker" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Overlay.Toolbar" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorControlNormal">?android:textColorPrimary</item>
    </style>

    <style name="Widget.Appbar" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">?android:textColorPrimary</item>
        <item name="android:background">@android:color/white</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:theme">@style/Overlay.Toolbar</item>
    </style>

    <style name="Widget.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@android:color/white</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicator">@drawable/rounded_tab_indicator</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabTextAppearance">@style/Appearance.Tab.Title</item>
    </style>

    <style name="Widget.Card.Elevated" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardMaxElevation">8dp</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

</resources>