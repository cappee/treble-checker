<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WidgetMaterialized.Appbar" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="WidgetMaterialized.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">?android:textColorPrimary</item>
        <item name="android:background">@android:color/white</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:theme">@style/OverlayCustomizated.Toolbar</item>
    </style>

    <style name="WidgetMaterialized.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@android:color/white</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicator">@drawable/rounded_tab_indicator</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabTextAppearance">@style/AppearanceMaterialized.Tab.Title</item>
    </style>

    <style name="WidgetMaterialized.Card.Elevated" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">3dp</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

</resources>